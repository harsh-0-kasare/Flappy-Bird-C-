{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with graphics.h",
            "command": "C:\\MINGW\\bin\\g++.exe",

            "args": [
                "-g",
                "${file}",

                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",

                "-IC:\\MINGW\\include",
                "-LC:\\MINGW\\lib",

                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32",
                "-lwinmm"
            ],

            "options": {
                "cwd": "${fileDirname}"
            },

            "problemMatcher": ["$gcc"],

            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
